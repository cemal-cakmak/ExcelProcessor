{
  "manifest_version": 3,
  "name": "Excel Yapıştırıcı - Bölüm 1",
  "version": "1.0.0",
  "description": "Excel verilerini web formlarına otomatik yapıştırır",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:5000/*",
    "http://localhost:5001/*",
    "https://localhost:5001/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Excel Yapıştırıcı"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
