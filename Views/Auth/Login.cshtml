@model ExcelProcessor.Models.LoginModel
@{
    ViewData["Title"] = "Giriş Yap - Excel Processor";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body style="margin: 0; padding: 0; overflow: hidden;">

<style>
    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @@keyframes slideInLeft {
        from { opacity: 0; transform: translateX(-50px); }
        to { opacity: 1; transform: translateX(0); }
    }
    
    @@keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    
    .animated-bg {
        background: linear-gradient(-45deg, #667eea, #764ba2, #667eea, #764ba2);
        background-size: 400% 400%;
        animation: gradientShift 15s ease infinite;
    }
    
    .float-animation {
        animation: float 6s ease-in-out infinite;
    }
    
    .pulse-animation {
        animation: pulse 2s ease-in-out infinite;
    }
    
    .fade-in-up {
        animation: fadeInUp 0.8s ease-out;
    }
    
    .slide-in-left {
        animation: slideInLeft 0.8s ease-out;
    }
    
    .feature-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    
    .feature-icon {
        transition: transform 0.3s ease;
    }
    
    .feature-card:hover .feature-icon {
        transform: scale(1.1) rotate(5deg);
    }
    
    .login-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .login-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }
    
    .btn-animated {
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .btn-animated:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,123,255,0.4);
    }
    
    .btn-animated::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }
    
    .btn-animated:hover::before {
        left: 100%;
    }
    
    .stats-counter {
        animation: pulse 3s ease-in-out infinite;
    }
    
    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 2;
        top: 0;
        left: 0;
    }
    
    .floating-shapes::before,
    .floating-shapes::after {
        content: '';
        position: absolute;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
        animation: float 8s ease-in-out infinite;
    }
    
    .floating-shapes::before {
        width: 100px;
        height: 100px;
        top: 20%;
        left: 10%;
        animation-delay: -2s;
    }
    
    .floating-shapes::after {
        width: 150px;
        height: 150px;
        bottom: 20%;
        right: 10%;
        animation-delay: -4s;
    }
    
    /* Adım adım süreç animasyonları */
    .process-steps {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
        justify-content: center;
        margin: 2rem 0;
    }
    
    .step-item {
        display: flex;
        align-items: center;
        text-align: center;
        position: relative;
    }
    
    .step-number {
        width: 40px;
        height: 40px;
        background: rgba(255,255,255,0.3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 1rem;
        animation: pulse 2s ease-in-out infinite;
    }
    
    .step-content {
        margin: 0 1rem;
        min-width: 120px;
    }
    
    .step-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }
    
    .step-arrow {
        font-size: 1.5rem;
        margin: 0 0.5rem;
        opacity: 0.7;
    }
    
    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-10px); }
        60% { transform: translateY(-5px); }
    }
    
    @@keyframes slideUpDown {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-8px); }
    }
    
    .rotating-icon {
        animation: rotate 3s linear infinite;
    }
    
    .bouncing-icon {
        animation: bounce 2s ease-in-out infinite;
    }
    
    .sliding-icon {
        animation: slideUpDown 2s ease-in-out infinite;
    }
    
    .pulsing-icon {
        animation: pulse 1.5s ease-in-out infinite;
        color: #ffd700;
    }
    
    .feature-highlight {
        background: rgba(255,255,255,0.1);
        padding: 0.5rem 1rem;
        border-radius: 25px;
        transition: all 0.3s ease;
        border: 1px solid rgba(255,255,255,0.2);
    }
    
    .feature-highlight:hover {
        background: rgba(255,255,255,0.2);
        transform: scale(1.05);
    }
    
    @@media (max-width: 768px) {
        .process-steps {
            flex-direction: column;
        }
        
        .step-arrow {
            transform: rotate(90deg);
            margin: 0.5rem 0;
        }
    }
    
    /* Tam ekran layout stilleri */
    .fullscreen-bg {
        width: 100vw;
        height: 100vh;
        position: relative;
        overflow: hidden;
    }
    
    /* Arka plan adımları */
    .background-steps {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 3;
    }
    
    .brand-header {
        position: absolute;
        top: 5%;
        width: 100%;
        z-index: 4;
    }
    
    /* Adım köşeleri */
    .step-corners {
        position: absolute;
        width: 100%;
        height: 100%;
    }
    
    .step-corner {
        position: absolute;
        width: 300px;
        height: 250px;
    }
    
    .step-corner.top-left {
        top: 15%;
        left: 5%;
    }
    
    .step-corner.top-right {
        top: 15%;
        right: 5%;
    }
    
    .step-corner.bottom-left {
        bottom: 15%;
        left: 5%;
    }
    
    .step-corner.bottom-right {
        bottom: 15%;
        right: 5%;
    }
    
    .step-mega {
        text-align: center;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }
    
    .step-mega:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: scale(1.05);
    }
    
    .step-number-big {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: bold;
        color: white;
        margin: 0 auto 1rem;
        animation: pulse 3s ease-in-out infinite;
    }
    
    .step-icon-big {
        font-size: 3rem;
        margin: 1rem 0;
        color: white;
    }
    
    /* Bağlantı çizgileri */
    .connection-lines {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 2;
    }
    
    .line {
        position: absolute;
        background: linear-gradient(90deg, rgba(255,255,255,0.1), rgba(255,255,255,0.3), rgba(255,255,255,0.1));
        animation: flow 4s ease-in-out infinite;
    }
    
    .horizontal-top {
        top: 25%;
        left: 20%;
        right: 20%;
        height: 2px;
    }
    
    .horizontal-bottom {
        bottom: 25%;
        left: 20%;
        right: 20%;
        height: 2px;
    }
    
    .vertical-left {
        left: 15%;
        top: 30%;
        bottom: 30%;
        width: 2px;
    }
    
    .vertical-right {
        right: 15%;
        top: 30%;
        bottom: 30%;
        width: 2px;
    }
    
    @@keyframes flow {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 0.8; }
    }
    
    /* Merkez login overlay */
    .center-login-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
    }
    
    .login-panel {
        width: 400px;
        max-width: 90vw;
    }
    
    .ultra-transparent-card {
        background: rgba(255, 255, 255, 0.08) !important;
        backdrop-filter: blur(25px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
    }
    
    /* Floating input'lar */
    .floating-input {
        position: relative;
        margin-bottom: 1.5rem;
    }
    
    .glass-input {
        background: rgba(255, 255, 255, 0.1) !important;
        border: 2px solid rgba(255, 255, 255, 0.2) !important;
        border-radius: 15px;
        padding: 1rem !important;
        color: white !important;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }
    
    .glass-input:focus {
        background: rgba(255, 255, 255, 0.15) !important;
        border-color: rgba(255, 255, 255, 0.4) !important;
        box-shadow: 0 0 25px rgba(255, 255, 255, 0.1);
        outline: none;
    }
    
    .floating-label {
        position: absolute;
        top: 50%;
        left: 1rem;
        transform: translateY(-50%);
        color: rgba(255, 255, 255, 0.7);
        font-weight: 500;
        transition: all 0.3s ease;
        pointer-events: none;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.05), transparent);
        padding: 0.2rem 0.8rem;
        border-radius: 10px;
    }
    
    .glass-input:focus + .floating-label,
    .glass-input:not(:placeholder-shown) + .floating-label {
        top: -0.5rem;
        left: 1rem;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.9);
        background: rgba(255, 255, 255, 0.1);
    }
    
    .btn-ultra-glass {
        background: rgba(255, 255, 255, 0.15) !important;
        border: 2px solid rgba(255, 255, 255, 0.3) !important;
        color: white !important;
        font-weight: bold;
        border-radius: 15px;
        padding: 1rem;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .btn-ultra-glass:hover {
        background: rgba(255, 255, 255, 0.25) !important;
        border-color: rgba(255, 255, 255, 0.5) !important;
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(255, 255, 255, 0.1);
    }
    
    .btn-ultra-glass::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }
    
    .btn-ultra-glass:hover::before {
        left: 100%;
    }
    
    .content-layer {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        display: grid;
        grid-template-areas: 
            "top-left . top-right"
            ". center ."
            "bottom . bottom-right";
        grid-template-rows: 1fr 2fr 1fr;
        grid-template-columns: 1fr 2fr 1fr;
        padding: 2rem;
        box-sizing: border-box;
    }
    
    .top-left-content {
        grid-area: top-left;
        align-self: start;
    }
    
    .top-right-content {
        grid-area: top-right;
        align-self: start;
        text-align: right;
    }
    
    .bottom-content {
        grid-area: bottom;
        align-self: end;
        justify-self: center;
    }
    
    .center-login-panel {
        grid-area: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .bottom-right-stats {
        grid-area: bottom-right;
        align-self: end;
        justify-self: end;
    }
    
    /* Şeffaf login paneli stilleri */
    .transparent-card {
        background: rgba(255, 255, 255, 0.1) !important;
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }
    
    .transparent-input {
        background: rgba(255, 255, 255, 0.1) !important;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3) !important;
        color: white !important;
    }
    
    .transparent-input::placeholder {
        color: rgba(255, 255, 255, 0.7) !important;
    }
    
    .transparent-input:focus {
        background: rgba(255, 255, 255, 0.15) !important;
        border-color: rgba(255, 255, 255, 0.5) !important;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
        color: white !important;
    }
    
    .btn-glass {
        background: rgba(255, 255, 255, 0.2) !important;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3) !important;
        color: white !important;
        font-weight: bold;
    }
    
    .btn-glass:hover {
        background: rgba(255, 255, 255, 0.3) !important;
        border-color: rgba(255, 255, 255, 0.5) !important;
        color: white !important;
        transform: translateY(-2px);
        box-shadow: 0 5px 25px rgba(255, 255, 255, 0.2);
    }
    
    .login-container {
        width: 100%;
        max-width: 400px;
    }
    
    /* Özellikler grid */
    .features-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    
    /* Horizontal process steps */
    .process-steps-horizontal {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    /* İstatistikler */
    .stats-container {
        display: flex;
        gap: 2rem;
        text-align: center;
    }
    
    .stat-item {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    /* Responsive tasarım */
    @@media (max-width: 1200px) {
        .content-layer {
            grid-template-areas: 
                "top-left top-right"
                "center center"
                "bottom bottom-right";
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 3fr 1fr;
            padding: 1.5rem;
        }
        
        .features-grid {
            grid-template-columns: 1fr;
        }
        
        .stats-container {
            flex-direction: column;
            gap: 1rem;
        }
    }
    
    @@media (max-width: 768px) {
        .content-layer {
            grid-template-areas: 
                "top-left"
                "center"
                "bottom"
                "bottom-right";
            grid-template-columns: 1fr;
            grid-template-rows: auto auto auto auto;
            padding: 1rem;
        }
        
        .top-left-content h1 {
            font-size: 2rem;
        }
        
        .process-steps-horizontal {
            flex-direction: column;
        }
        
        .step-arrow {
            transform: rotate(90deg);
        }
        
        .stats-container {
            flex-direction: row;
            justify-content: center;
        }
        
        .top-right-content {
            text-align: center;
        }
    }
</style>

<!-- Tam ekran hareketli arka plan -->
<div class="fullscreen-bg animated-bg position-relative">
    <div class="floating-shapes"></div>
    
    <!-- Hareketli adımlar - tam ekran -->
    <div class="background-steps">
        <!-- Logo ve başlık -->
        <div class="brand-header slide-in-left">
            <h1 class="display-3 fw-bold text-white text-center">
                <i class="fas fa-file-excel text-success me-3 float-animation"></i>
                Excel Processor
            </h1>
            <p class="lead text-white text-center opacity-75 fade-in-up">Excel'den MEB formlarına otomatik veri aktarımı</p>
        </div>

        <!-- 4 Adım - ekranın dört köşesine dağıtılmış -->
        <div class="step-corners">
            <div class="step-corner top-left fade-in-up" style="animation-delay: 0.5s;">
                <div class="step-mega">
                    <div class="step-number-big">1</div>
                    <div class="step-icon-big">
                        <i class="fas fa-download rotating-icon"></i>
                    </div>
                    <h3 class="fw-bold text-white">Şablon İndir</h3>
                    <p class="text-white opacity-75">Excel şablonunu indirin</p>
                </div>
            </div>
            
            <div class="step-corner top-right fade-in-up" style="animation-delay: 1s;">
                <div class="step-mega">
                    <div class="step-number-big">2</div>
                    <div class="step-icon-big">
                        <i class="fas fa-edit bouncing-icon"></i>
                    </div>
                    <h3 class="fw-bold text-white">Veri Girin</h3>
                    <p class="text-white opacity-75">Şablona verilerinizi yazın</p>
                </div>
            </div>
            
            <div class="step-corner bottom-left fade-in-up" style="animation-delay: 1.5s;">
                <div class="step-mega">
                    <div class="step-number-big">3</div>
                    <div class="step-icon-big">
                        <i class="fas fa-upload sliding-icon"></i>
                    </div>
                    <h3 class="fw-bold text-white">Dosya Yükle</h3>
                    <p class="text-white opacity-75">Excel dosyasını sisteme yükleyin</p>
                </div>
            </div>
            
            <div class="step-corner bottom-right fade-in-up" style="animation-delay: 2s;">
                <div class="step-mega">
                    <div class="step-number-big">4</div>
                    <div class="step-icon-big">
                        <i class="fas fa-magic pulsing-icon"></i>
                    </div>
                    <h3 class="fw-bold text-white">Otomatik Yapıştır</h3>
                    <p class="text-white opacity-75">MEB formuna tek tıkla aktarın</p>
                </div>
            </div>
        </div>

        <!-- Bağlantı çizgileri -->
        <div class="connection-lines">
            <div class="line horizontal-top"></div>
            <div class="line vertical-left"></div>
            <div class="line horizontal-bottom"></div>
            <div class="line vertical-right"></div>
        </div>
    </div>

    <!-- Merkez - Şeffaf Login Paneli -->
    <div class="center-login-overlay">
        <div class="login-panel fade-in-up" style="animation-delay: 2.5s;">
            <div class="ultra-transparent-card">
                <div class="login-header">
                    <h3 class="text-white fw-bold text-center mb-4">
                        <i class="fas fa-sign-in-alt me-2 float-animation"></i>
                        Sisteme Giriş
                    </h3>
                </div>
                
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <div class="floating-input">
                            <input asp-for="Username" class="form-control glass-input" placeholder=" " />
                            <label asp-for="Username" class="floating-label">
                                <i class="fas fa-user me-2"></i>Kullanıcı Adı
                            </label>
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <div class="floating-input">
                            <input asp-for="Password" type="password" class="form-control glass-input" placeholder=" " />
                            <label asp-for="Password" class="floating-label">
                                <i class="fas fa-lock me-2"></i>Şifre
                            </label>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-ultra-glass w-100 btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

</body>
</html>


