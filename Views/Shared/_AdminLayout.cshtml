<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        body {
            overflow-x: hidden;
        }
        
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding-top: 0;
            z-index: 1000;
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out;
        }
        
        .sidebar.show {
            transform: translateX(0);
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 15px 20px;
            border-radius: 0;
            transition: all 0.3s;
        }
        
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
            border-left: 4px solid #ffc107;
        }
        
        .sidebar .nav-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }
        
        .main-content {
            margin-left: 0;
            transition: margin-left 0.3s ease-in-out;
            min-height: 100vh;
        }
        
        .main-content.shifted {
            margin-left: 250px;
        }
        
        .navbar-admin {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            border-bottom: 3px solid #ffc107;
        }
        
        .sidebar-toggle {
            background: none;
            border: none;
            color: white;
            font-size: 1.2rem;
        }
        
        .sidebar-brand {
            padding: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 20px;
        }
        
        .sidebar-brand h4 {
            color: white;
            margin: 0;
            font-weight: 600;
        }
        
        .content-wrapper {
            padding: 20px;
        }
        
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            border-radius: 10px 10px 0 0 !important;
            font-weight: 600;
        }
        
        @@media (max-width: 768px) {
            .main-content.shifted {
                margin-left: 0;
            }
            
            .sidebar {
                width: 100%;
            }
        }
        
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
            display: none;
        }
        
        .overlay.show {
            display: block;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-brand">
            <h4><i class="fas fa-cogs me-2"></i>Admin Panel</h4>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                    <i class="fas fa-tachometer-alt"></i>Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Users", "Admin")">
                    <i class="fas fa-users"></i>Kullanıcı İşlemleri
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Statistics", "Admin")">
                    <i class="fas fa-chart-bar"></i>İstatistikler
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Logs", "Admin")">
                    <i class="fas fa-file-alt"></i>Log Kayıtları
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Settings", "Admin")">
                    <i class="fas fa-cog"></i>Sistem Ayarları
                </a>
            </li>
            <li class="nav-item border-top mt-3 pt-3">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-home"></i>Ana Sayfaya Dön
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Logout", "Auth")">
                    <i class="fas fa-sign-out-alt"></i>Çıkış Yap
                </a>
            </li>
        </ul>
    </nav>

    <!-- Overlay -->
    <div class="overlay" id="overlay"></div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark navbar-admin">
            <div class="container-fluid">
                <button class="sidebar-toggle me-3" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <span class="navbar-brand mb-0 h1">@ViewData["Title"]</span>
                
                <div class="navbar-nav ms-auto">
                    <span class="navbar-text me-3">
                        <i class="fas fa-user"></i> @Context.Session.GetUsername()
                    </span>
                    <a class="btn btn-outline-light btn-sm" href="@Url.Action("Index", "Home")">
                        <i class="fas fa-home"></i> Ana Sayfa
                    </a>
                </div>
            </div>
        </nav>

        <!-- Content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            const sidebar = $('#sidebar');
            const mainContent = $('#mainContent');
            const overlay = $('#overlay');
            const sidebarToggle = $('#sidebarToggle');

            // Sidebar toggle
            sidebarToggle.on('click', function() {
                sidebar.toggleClass('show');
                mainContent.toggleClass('shifted');
                overlay.toggleClass('show');
            });

            // Close sidebar when clicking overlay
            overlay.on('click', function() {
                sidebar.removeClass('show');
                mainContent.removeClass('shifted');
                overlay.removeClass('show');
            });

            // Auto-show sidebar on larger screens
            function checkScreenSize() {
                if ($(window).width() > 768) {
                    sidebar.addClass('show');
                    mainContent.addClass('shifted');
                    overlay.removeClass('show');
                } else {
                    sidebar.removeClass('show');
                    mainContent.removeClass('shifted');
                    overlay.removeClass('show');
                }
            }

            checkScreenSize();
            $(window).resize(checkScreenSize);

            // Active link highlighting
            const currentPath = window.location.pathname;
            $('.sidebar .nav-link').each(function() {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
